<Window x:Class="GTrustDashBoard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GTrustDashBoard"
        mc:Ignorable="d"
        Title="MainWindow" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    
        
   
    <Grid x:Name="MainGrid" Background="Blue">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="9.5*"/>
            <ColumnDefinition Width="0.25*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1" Background="Red"></Grid>
        <Grid Grid.Row="1" Background="Transparent" Grid.Column="1" x:Name="FrameGrid" Panel.ZIndex="2">
            <Frame NavigationUIVisibility="Hidden" x:Name="MainFrame"></Frame>
        </Grid>
        <Grid Grid.Row="1" Background="LightSeaGreen" Grid.Column="2" ></Grid>
    </Grid>
</Window>
